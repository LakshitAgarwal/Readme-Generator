{
    "watch": [
        "src"
    ],
    "ext": "ts,js",
    "ignore": [
        "node_modules/**/*",
        "dist/**/*",
        "temp/**/*",
        "*.log",
        "*.tmp",
        "*.temp",
        ".git/**/*",
        "coverage/**/*",
        "**/*.pyc",
        "**/__pycache__/**",
        "**/venv/**",
        "**/env/**",
        "**/*.md"
    ],
    "exec": "ts-node src/server.ts",
    "delay": 2000,
    "verbose": false
}